      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-md-10 mx-auto">
            <div class="page-heading">
              <h1>Contactez nous</h1>
              <span class="subheading">Une question? N'hesitez pas.</span>
            </div>
          </div>
        </div>
      </div>
    </header>

    <!-- Main Content -->

  <div id= "post-injust">

<%= simple_form_for @contact, url: create_contact_url do |f| %>
    
  <%= f.error_notification %>
  

  <div class="form-inputs"><br>
    <h2 style="color:#4cbf6a ">Contact</h2><br><br><br>

    <%= f.input :prenom,label: 'Prenom'
                %>
                <%= f.input :nom,label: 'Nom'
                %>
                <%= f.input :email,label: 'email'
                %>
    <%= f.text_area :message,label: 'message',:input_html => {:rows => 10}
                  %>(detaillez au maximum,une reponse vous sera apportée dans les meilleurs delais)<br><br>

 <%= recaptcha_tags theme: 'dark'%>

 
  <div class="form-actions">
    <%= f.button :submit, "Envoyer message" %>
  </div>

 <a class="nav-link" href="/">Retour accueil</a>
<% end %>
