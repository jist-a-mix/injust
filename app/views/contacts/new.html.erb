        </button>
       <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav ml-auto">
           
            <% if user_signed_in? %>
           
            <li class="nav-item">
               <%= link_to " liste des injustices" , posts_path , class: "nav-link"%></li>
            
            <li class="nav-item">
              <%= link_to " Nouvelle injustice" , new_post_path , class: "nav-link"%></li>
            
            <li class="nav-item">
